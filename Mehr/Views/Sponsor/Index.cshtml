@model IEnumerable<DataLayer.Sponsor>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CauseOfSupport)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OtherSupport)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MyColleague)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CauseOfSupport)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OtherSupport)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MyColleague.Name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.SponsorID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.SponsorID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.SponsorID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
