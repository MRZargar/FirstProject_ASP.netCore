@model IEnumerable<DataLayer.Bank>
@{
    ViewData["Title"] = "Banks";
}
@{
    int counter = 0;
    int col = 3;
}
<section id="header-footer">
    <div class="row match-height">
        @foreach (var bank in Model)
        {
            var BankPicture = bank.pic == null ? "Bank.jpg" : bank.pic;

            <div class="col-lg-4 col-md-12">

                <div class="card">
                    <div class="card-header">
                        <div class="media-body w-100 prperty-Colleague">
                            <h4 class="card-title">@bank.BankName Bank</h4>
                            <div class="heading-elements">
                                <ul class="list-unstyled users-list m-0 float-right">
                                    <li class="avatar avatar-sm pull-up">
                                        <div onclick="deleteBank(@bank.BankID)">
                                            <i class="la la-trash-o media-object rounded-circle no-border-top-radius no-border-bottom-radius"></i>
                                        </div>
                                    </li>
                                    <li class="avatar avatar-sm pull-up">
                                        <div onclick="editBank(@bank.BankID)">
                                            <i class="la la-edit media-object rounded-circle no-border-top-radius no-border-bottom-radius"></i>
                                        </div>
                                    </li>
                                    <li class="avatar avatar-sm pull-up">
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <img class="" src="~/images/Banks/@BankPicture" alt="Bank image">
                    <div class="card-body">
                        <a asp-controller="Bank" asp-action="Details" asp-route-id="@bank.BankID" class="card-link">More...</a>
                    </div>
                </div>
            </div>

        }
        <div class="col-lg-4 col-md-12">
            <div class="card">
                <a onclick="newBank()">
                    <p class="counter display-1">+</p>
                </a>
            </div>
        </div>
    </div>
</section>

@section Script{
    <script src="~/js/pages/app.js"></script>
}