@model DataLayer.BankTransaction
@{
    Layout = null;
}

<form asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" name="BankID" value="@ViewBag.BankID" />
    <div class="form-group ">
        <label for="buttomGroup" class="control-label">Transaction Date</label>
        <div class="input-group">
            <div class="input-group-prepend">
                <span class="input-group-text cursor-pointer" id="TransactionDate"><i class="la la-calendar"></i></span>
            </div>
            <input readonly type="text" name="TransactionDate" class="form-control" id="inputTransactionDate" placeholder="Transaction Date" />
            <span asp-validation-for="Transaction.TransactionDate" class="text-danger"></span>
        </div>
    </div>
        <div class="form-group">
            <label asp-for="Transaction.TrackingNumber" class="control-label"></label>
            <input asp-for="Transaction.TrackingNumber" class="form-control" />
            <span asp-validation-for="Transaction.TrackingNumber" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Transaction.LastFourNumbersOfBankCard" class="control-label"></label>
            <input asp-for="Transaction.LastFourNumbersOfBankCard"  class="form-control" />
            <span asp-validation-for="Transaction.LastFourNumbersOfBankCard" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Transaction.Amount" class="control-label"></label>
            <input asp-for="Transaction.Amount" class="form-control" />
            <span asp-validation-for="Transaction.Amount" class="text-danger"></span>
        </div>
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>

<script>
    $('#TransactionDate').MdPersianDateTimePicker({
        targetTextSelector: '#inputTransactionDate',
        selectedDate: new Date(),
        enableTimePicker: true,
        placement: 'top',
        dateFormat: 'yyyy/MM/dd HH:mm:ss',
        textFormat: 'yyyy/MM/dd HH:mm:ss',
    });
</script>

@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
